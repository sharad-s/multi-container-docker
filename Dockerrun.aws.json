{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "client",
            "image": "sharadshekar/complex-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "sharadshekar/complex-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "sharadshekar/complex-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "sharadshekar/complex-nginx",
            "hostname": "nginx",
            "essential": false,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}